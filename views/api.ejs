<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Node - Express</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css"/>
        <link rel="stylesheet" href="/css/font-awesome.min.css"/>
        <link rel="stylesheet" href="/css/styles.css"/>

        <script type="text/javascript" src="/js/jquery.min.js"></script>
        <script type="text/javascript" src="/js/bootstrap.min.js"></script>
        <!--script type="text/javascript" src="/font-awesome/5.6.1/js/all.min.js"></script-->
    </head>
    <body>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bg-image">
                    <ul class="nav navbar navbar-expand-lg bg-nav" style="list-style-type: none;">
                        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
                        <% if(user == undefined) { %>
                            <li class="nav-item"><a class="nav-link" href="/auth/login">Login</a></li>
                        <% } else { %>
                            <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
                            <li class="nav-item"><a class="nav-link" href="/profile">Profile</a></li>
                        <% } %>
                    </ul>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <header>
                        <h3><%= user.displayName %> Welcome to the API page.</h3>
                    </header>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <div style="border: 2px solid #777; width: 320px; padding: 20px; ">
                        <a class="nav-link" href="/api/messages">Get Messages</a>
                    </div>
                    <div style="border: 2px solid #777; width: 320px; padding: 20px; margin-top: 5px;">
                        <p>Get Message By Id</p>
                        <input id="msgId" type="text" placeholder="value" maxlength="5" required/>
                        <button type="button" onclick="getMessageById();">Get Message</button>
                    </div>
                    <div style="border: 2px solid #777; width: 320px; padding: 20px; margin-top: 5px;">
                        <p>Put Message</p>
                        <form method="POST" action="/api/message">
                            <label>Message</label>
                            <input id="formMsgInput" type="text" placeholder="value" maxlength="25" require/>
                            <input type="submit" value="Submit"/>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div>
                        <p>Version: <%= data.version %></p>
                        <br/><br/>
                        <p>Message: <%= data.message %></p>
                    </div>
                </div>
            </div>
        </div>

        <script>
            function getMessageById() {
                console.log('get msg');
                let val = document.getElementById('msgId').value;
                window.location = '/api/message/' + val;
            };
        </script>
    </body>
</html>
